<%- include("partials/header") -%>

    <div class="login-header">
        <img id="brand-logo" src="images/brand-logo1.png" alt="Logo" class="d-inline-block align-text-top">
        <h1 class="chatter">Chatter</h1>
    </div>
    <div class="join-form">
        <form action="/chat" id="join-chat">
            <label for="username">Username</label><br>
            <input id="username" name="username" type="text" placeholder="Enter username..." required autocomplete="off"><br>
            <label for="room">Room</label><br>
            <select name="room" id="room">
                <option value="Gamers">Gamers</option>
                <option value="Coding">Coding</option>
                <option value="Timepass">Timepass</option>
                <option value="NightWatchers">NightWatchers</option>
                <option value="Notice">Notice</option>

            </select>
            <button type="submit" class="btn btn-success join">Join chat</button>
        </form>
    </div>


    
<%- include("partials/footer") -%>